public function testFullcalendarClasses() {
    $entity = $this->createMock(EntityInterface::class);
    
    // Mocking a taxonomy term field value
    $terms = [
        (object) ['tid' => 1, 'name' => 'Event'],
        (object) ['tid' => 2, 'name' => 'Meeting'],
    ];
    
    // Mock the entity method to return our terms
    $entity->method('get')->willReturn($terms);

    // Call the hook implementation
    $classes = hook_fullcalendar_classes($entity);

    // Expected classes (assuming classes are built as 'taxonomy-term-[tid]')
    $expectedClass = 'taxonomy-term-1';

    // Assert that the expected class exists in the result
    $this->assertContains($expectedClass, $classes, "The expected class is missing.");
}