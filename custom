namespace Drupal\mymodule\Plugin\FullCalendar;

use Drupal\fullcalendar_legend\Plugin\FullCalendar\Legend;
use Drupal\taxonomy\Entity\Term;

/**
 * Custom FullCalendar Legend override.
 */
class CustomLegend extends Legend {

  /**
   * {@inheritdoc}
   */
  protected function generateLegendList(array $terms) {
    $legend_list = parent::generateLegendList($terms);

    // Add custom classes to legend terms.
    foreach ($legend_list as $index => &$item) {
      if (!empty($item['#term_id'])) {
        $item['#attributes']['class'][] = 'colour-palette-' . $index;
      }
    }

    return $legend_list;
  }
}

services:
  mymodule.fullcalendar_legend:
    class: Drupal\mymodule\Plugin\FullCalendar\CustomLegend
    arguments: ['@entity_type.manager']
    tags:
      - { name: fullcalendar_legend }